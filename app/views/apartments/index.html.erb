<%- model_class = Apartment -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize %> (<%= @apartments.length %>)</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:number) %></th>
      <th><%= model_class.human_attribute_name(:visited) %></th>
      <th><%= model_class.human_attribute_name(:revisit) %></th>
      <th><%= model_class.human_attribute_name(:notes) %></th>
      <th><%= model_class.human_attribute_name(:last_visited) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @apartments.each do |apartment| %>
      <tr data-id="<%= apartment.id %>">
        <%= render partial: "apartments/row", locals: { apartment: apartment } %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_building_apartment_path(@building),
            :class => 'btn btn-primary' %>
